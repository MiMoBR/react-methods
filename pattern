<input
  type="email"
  name="login"
  {...register("login", {
    required: true, maxLength: 200, minLength: 10,
    pattern: {
      value: /^([\w-\.]+)@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.)|(([\w-]+\.)+))([a-zA-Z]{2,4}|[0-9]{1,3})(\]?)$/,
      message: "Por favor, preencha este campo."
    }
  })}
/>
